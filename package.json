{
  "name": "node-and-vue-fullstack",
  "description": "Vue js, Node js, vite, tailwind css project bootstraping",
  "private": true,
  "version": "1.0.0",
  "author_url": "anichur rahaman",
  "github": "anis3139/node-and-vue-fullstack",
  "type": "commonjs",
  "main": "app.js",
  "scripts": {
    "server": "NODE_ENV=development nodemon app.js --ignore 'client/' ",
    "client": "npm run dev --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "node app.js",
    "build": "npm install --prefix client && npm run build --prefix client",
    "prod": "NODE_ENV=production node app.js"
  },
  "author": "Anichur Rahaman",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^7.6.0",
    "dotenv": "^16.0.2",
    "express": "^4.18.1",
    "express-validator": "^6.14.2",
    "http-errors": "^2.0.0",
    "pinia": "^2.0.28",
    "winston": "^3.8.2"
  }
}
